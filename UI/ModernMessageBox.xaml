<Window x:Class="WinAutoDarkMode.UI.ModernMessageBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="提示" Height="180" Width="320"
        WindowStartupLocation="CenterOwner"
        Background="{DynamicResource WindowBackgroundBrush}"
        WindowStyle="None" AllowsTransparency="True" ResizeMode="NoResize">
    
    <Border BorderBrush="{DynamicResource BorderBrush}" BorderThickness="1" CornerRadius="8" Background="{DynamicResource WindowBackgroundBrush}">
        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            
            <TextBlock x:Name="MessageText" Text="内容" FontSize="15" VerticalAlignment="Center" TextAlignment="Center" TextWrapping="Wrap" Foreground="{DynamicResource MainTextBrush}"/>
            
            <Button Grid.Row="1" Content="确定" Width="80" Height="30" HorizontalAlignment="Right" Click="Ok_Click">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{DynamicResource AccentBrush}" CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" TextElement.Foreground="White"/>
                        </Border>
                    </ControlTemplate>
                </Button.Template>
            </Button>
        </Grid>
    </Border>
</Window>
