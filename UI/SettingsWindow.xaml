<Window x:Class="WinAutoDarkMode.UI.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="WinAutoDarkMode" 
        Height="500" 
        Width="450"
        WindowStartupLocation="CenterScreen"
        Background="Transparent"
        AllowsTransparency="True"
        WindowStyle="None"
        FontFamily="Segoe UI, Microsoft YaHei"
        Icon="/sun-moon.png"
        ResizeMode="NoResize">
    
    <Window.Resources>
        <!-- 现代按钮样式 -->
        <Style x:Key="ModernButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{DynamicResource AccentBrush}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" Margin="{TemplateBinding Padding}"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="SecondaryButtonStyle" TargetType="Button" BasedOn="{StaticResource ModernButtonStyle}">
            <Setter Property="Background" Value="{DynamicResource CardBackgroundBrush}"/>
            <Setter Property="Foreground" Value="{DynamicResource MainTextBrush}"/>
        </Style>

        <!-- 卡片样式 -->
        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="Background" Value="{DynamicResource CardBackgroundBrush}"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="15"/>
            <Setter Property="Margin" Value="0,0,0,12"/>
        </Style>
    </Window.Resources>

    <!-- 顶层圆角容器 -->
    <Border Background="{DynamicResource WindowBackgroundBrush}" 
            BorderBrush="{DynamicResource BorderBrush}" 
            BorderThickness="1" 
            CornerRadius="12"
            MouseDown="Window_MouseDown">
        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header + Close Button -->
            <Grid Grid.Row="0" Margin="0,0,0,25">
                <StackPanel>
                    <TextBlock Text="自动深色模式" FontSize="24" FontWeight="SemiBold" Foreground="{DynamicResource MainTextBrush}"/>
                    <TextBlock Text="让您的系统主题随心而动" FontSize="13" Foreground="{DynamicResource SecondaryTextBrush}" Margin="0,4,0,0"/>
                </StackPanel>
                
                <!-- 关闭按钮 (X) -->
                <Button HorizontalAlignment="Right" VerticalAlignment="Top" 
                        Width="30" Height="30" Background="Transparent" 
                        Click="Close_Click">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="Transparent" CornerRadius="15">
                                <TextBlock Text="" FontFamily="Segoe MDL2 Assets" 
                                           HorizontalAlignment="Center" VerticalAlignment="Center" 
                                           Foreground="{DynamicResource SecondaryTextBrush}"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </Grid>

            <!-- Content Area -->
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Hidden">
                <StackPanel>
                    <Border Style="{StaticResource CardStyle}">
                        <Grid>
                            <StackPanel>
                                <TextBlock Text="自动切换" FontSize="15" FontWeight="Medium"/>
                                <TextBlock Text="采用智能精准计时，零功耗实时响应" FontSize="11" Foreground="{DynamicResource SecondaryTextBrush}"/>
                            </StackPanel>
                            <CheckBox x:Name="AutoSwitchCheckBox" HorizontalAlignment="Right" VerticalAlignment="Center" />
                        </Grid>
                    </Border>

                    <Border Style="{StaticResource CardStyle}">
                        <StackPanel>
                            <TextBlock Text="时间计划" FontSize="15" FontWeight="Medium" Margin="0,0,0,12"/>
                            <Grid Margin="0,0,0,15">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="80"/>
                                </Grid.ColumnDefinitions>
                                <StackPanel>
                                    <StackPanel Orientation="Horizontal" Margin="0,0,0,2">
                                        <Viewbox Width="16" Height="16" Margin="0,0,6,0">
                                            <Path Data="M12,12 m-4,0 a4,4 0 1,0 8,0 a4,4 0 1,0 -8,0 M12,2 v2 M12,20 v2 M4.93,4.93 l1.41,1.41 M17.66,17.66 l1.41,1.41 M2,12 h2 M20,12 h2 M6.34,17.66 l-1.41,1.41 M19.07,4.93 l-1.41,1.41" 
                                                  Stroke="{DynamicResource AccentBrush}" StrokeThickness="2" StrokeStartLineCap="Round" StrokeEndLineCap="Round"/>
                                        </Viewbox>
                                        <TextBlock Text="浅色模式时间" VerticalAlignment="Center" FontWeight="Medium"/>
                                    </StackPanel>
                                    <TextBlock Text="早上何时切回浅色" FontSize="11" Foreground="{DynamicResource SecondaryTextBrush}"/>
                                </StackPanel>
                                <TextBox x:Name="LightModeTimeTextBox" Grid.Column="1" Height="28" TextAlignment="Center"/>
                            </Grid>

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="80"/>
                                </Grid.ColumnDefinitions>
                                <StackPanel>
                                    <StackPanel Orientation="Horizontal" Margin="0,0,0,2">
                                        <Viewbox Width="16" Height="16" Margin="0,0,6,0">
                                            <Path Data="M12,3 a9,9 0 1,0 9,9 a9,9 0 0,0 -9,-9 Z" 
                                                  Stroke="{DynamicResource AccentBrush}" StrokeThickness="2" StrokeStartLineCap="Round" StrokeEndLineCap="Round" Fill="{x:Null}"/>
                                        </Viewbox>
                                        <TextBlock Text="深色模式时间" VerticalAlignment="Center" FontWeight="Medium"/>
                                    </StackPanel>
                                    <TextBlock Text="夜晚何时进入深色" FontSize="11" Foreground="{DynamicResource SecondaryTextBrush}"/>
                                </StackPanel>
                                <TextBox x:Name="DarkModeTimeTextBox" Grid.Column="1" Height="28" TextAlignment="Center"/>
                            </Grid>
                        </StackPanel>
                    </Border>

                    <Border Style="{StaticResource CardStyle}">
                        <StackPanel>
                            <TextBlock Text="选项" FontSize="15" FontWeight="Medium" Margin="0,0,0,10"/>
                            <CheckBox x:Name="StartWithWindowsCheckBox" Content="开机自启动" Margin="0,0,0,8"/>
                            <CheckBox x:Name="MinimizeToTrayCheckBox" Content="最小化到系统托盘" Margin="0,0,0,0"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </ScrollViewer>

            <!-- Footer -->
            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,15,0,0">
                <Button Content="取消" Width="80" Height="32" Style="{StaticResource SecondaryButtonStyle}" Margin="0,0,10,0" Click="Close_Click"/>
                <Button Content="保存设置" Width="90" Height="32" Style="{StaticResource ModernButtonStyle}" Click="SaveButton_Click"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>
